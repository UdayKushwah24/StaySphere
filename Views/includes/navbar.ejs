<style>
  .btn-search {
    background-color: #fe424d;
    color: white;
    border-radius: 10px;
  }
  .btn-search:hover {
    background-color: #fe424d;
    color: white;
  }
  
  .btn-search {
    display: inline-flex;
    align-items: center;     /* vertical center */
    gap: 0.5rem;             /* space between icon and text */
  }
</style>

<nav class="navbar navbar-expand-sm bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings"
      ><i class="fa-brands fa-airbnb"></i
    ></a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <!-- <a class="nav-link" href="/">Home</a> -->
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <div class="navbar-nav ms-auto">
        <form class="d-flex" role="search">
          <input
            class="form-control me-2"
            type="search"
            placeholder="Search destinations"
           
          />
          <button class="btn btn-search" type="submit"> <i class="fa-solid fa-magnifying-glass"></i> Search</button>
        </form>
      </div>

      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">Add New Listings</a>
        <% if(currentUser){ %>
        <span class="navbar-text me-3">
          Hello, <%= currentUser.username %>
        </span>
        <a class="nav-link" href="/logout"> <b>Log out</b> </a>
        <% } %> <% if(!currentUser){ %>
        <a class="nav-link" href="/signup"> <b>Sign up</b></a>
        <a class="nav-link" href="/login"><b>Log in</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>

      <div class="row">
        <% for (review of listing.reviews) { %>
        <div class="col-md-6 col-12 mb-3">
          <div class="card shadow-sm p-2 mb-3">
            <div class="card-body">
              <h5 class="card-title text-primary"><%= listing.title %></h5>
              <p class="card-text text-secondary"><%= review.comment %></p>
              <span class="badge bg-success"> <%= review.rating %> â˜… </span>
            </div>
            <form
              action="/listings/<%= listing._id %>/reviews/<%= review._id%>/?_method=DELETE"
              method="post"
            >
              <button class="btn btn-sm btn-dark my-2">Delete</button>
            </form>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</body>
